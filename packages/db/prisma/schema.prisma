generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String  @id @default(uuid())
  github  String  @unique
  projects  Project[]
}

model Project {
  user  User   @relation(fields: [userId], references: [id])
  userId  String
  id  String  @id @unique @default(uuid())
  ip  String?     @unique
  instanceId  String?
  repo  String?
  lib Lib
  prisma  Boolean?
  workingDir  String?
  port  String?
  logs  String[]
  State State
  domain     DomainEntry? @relation(fields: [ip], references: [ip])
}

model DomainEntry {
  ip                     String            @id   @unique
  domain                 String?
  lastUsed               String?
  down                   Boolean?
  project                Project?
}

enum Lib {
  node
  vite
  next
}

enum State {
  processing  
  deployed
}