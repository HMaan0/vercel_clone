{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["WS_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "AWS_ACCESS_KEY",
        "AWS_ACCESS_SECRET",
        "REDIS_PASSWORD",
        "REDIS_HOST",
        "WS_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "AWS_ACCESS_KEY",
        "AWS_ACCESS_SECRET",
        "REDIS_PASSWORD",
        "REDIS_HOST",
        "WS_URL"
      ],
      "inputs": [".env"]
    }
  }
}
